extends ../layout

block content
  .page-header
    h2
      i.fa.fa-upload
      | File Upload

  h3 Bank Statement Upload Form
  .row
    .col-sm-6
      p All files will be uploaded to "/uploads" directory. PDF only.
      form(role='form', enctype='multipart/form-data', method='POST')
        .form-group
          label.control-label File Input
          input(type='file', name='myFile')
        button.btn.btn-primary(type='submit', id='submit') Submit
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.3/jquery.min.js')
        script(type='text/javascript').
          (function($) {  
            $('#submit').on('click', function(e) {
              console.log("file accepted");
              localStorage.setItem('file_success', '1');
            });
            })(jQuery);
